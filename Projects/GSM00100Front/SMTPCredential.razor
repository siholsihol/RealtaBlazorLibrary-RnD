@inherits R_Page
@attribute [R_Page(Title = "SMTP Credential")]
@inject R_ILocalizer<GSM00100FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_CSMTP_CREDENTIAL_USER"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout>
        <R_TextBox @bind-Value="@_credentialViewModel.Credential.CSMTP_CREDENTIAL_USER"></R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_CSMTP_CREDENTIAL_PASS"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout>
        <R_TextBox @bind-Value="@_credentialViewModel.Credential.CSMTP_CREDENTIAL_PASSWORD"
                   Password></R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Reverse>
    <R_Button OnClick="@(() => CloseOnClick(true))">@_localizer["_ok"]</R_Button>
    <R_Button OnClick="@(() => CloseOnClick(false))">@_localizer["_cancel"]</R_Button>
</R_StackLayout>